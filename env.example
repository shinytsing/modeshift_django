# QAToolBox 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# Django 基础配置
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# 数据库配置 (开发环境使用SQLite，生产环境使用PostgreSQL)
# 开发环境 - SQLite (默认)
DATABASE_URL=sqlite:///db.sqlite3

# 生产环境 - PostgreSQL (可选)
# DB_NAME=qatoolbox
# DB_USER=qatoolbox
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# Redis配置 (可选，用于缓存和Celery)
REDIS_URL=redis://localhost:6379/0

# 第三方API配置
DEEPSEEK_API_KEY=your-deepseek-api-key
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-google-custom-search-engine-id
OPENWEATHER_API_KEY=your-openweather-api-key

# 邮件配置 (生产环境)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@qatoolbox.com

# 安全配置 (生产环境)
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=

# 文件上传配置
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
MAX_UPLOAD_SIZE=104857600  # 100MB

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# 开发工具配置
DEBUG_TOOLBAR=True
INTERNAL_IPS=127.0.0.1,localhost

# 缓存配置
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake

# 会话配置
SESSION_ENGINE=django.contrib.sessions.backends.db
SESSION_COOKIE_AGE=1209600  # 14天

# 静态文件配置
STATIC_URL=/static/
MEDIA_URL=/media/

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=True

# API限制配置
API_RATE_LIMIT_ANON=1000
API_RATE_LIMIT_USER=10000

# Celery配置
CELERY_BROKER_URL=django-db://
CELERY_RESULT_BACKEND=django-db
CELERY_TASK_ALWAYS_EAGER=True

# 社交媒体API配置
XIAOHONGSHU_API_KEY=your-xiaohongshu-api-key
DOUYIN_API_KEY=your-douyin-api-key
NETEASE_API_KEY=your-netease-api-key
WEIBO_API_KEY=your-weibo-api-key
BILIBILI_API_KEY=your-bilibili-api-key
ZHIHU_API_KEY=your-zhihu-api-key 